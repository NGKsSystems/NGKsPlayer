{
  "id": "terminator",
  "name": "Terminator",
  "description": "Chrome skeleton with red glow and metallic distortion",
  "colors": {
    "bg-primary": "#c0c0c0",  // silver chrome
    "accent-red": "#ff0000",  // terminator red eyes/glow
