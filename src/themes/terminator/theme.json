    "accent-dark": "#404040",  // skeletal shadows
    "text-primary": "#000000",
    "waveform-line": "linear-gradient(90deg, #ff0000, #c0c0c0, #ff0000)",
    "waveform-fill": "rgba(255, 0, 0, 0.35)"
  },
  "fonts": {
    "primary": "'Orbitron', system-ui, sans-serif"  // futuristic font (add via CSS import if needed)
  },
  "effects": {
    "glow": true,
    "metallic-sheen": true,
    "scanlines": true
  }
}